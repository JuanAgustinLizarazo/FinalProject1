<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrime"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrime"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/robotoregular"
            android:text="Iniciar Sesión"
            android:textAlignment="center"
            android:textColor="@color/textPrimaryColor"
            android:textSize="40dp"


            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorPrime"

            >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="15dp"
                android:textColorHint="@color/textFieldTextColor"
                android:id="@+id/userText_txt"
                android:hint="Usuario"

                />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="15dp"
                android:textColorHint="@color/textFieldTextColor"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:id="@+id/passwordText_txt"

                />

            <Button

                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Iniciar Sesión"
                android:textColor="@color/textButtonColor"
                android:id="@+id/checkIn_btn"
                android:background="@drawable/rounded_button"
                />
            <Button

                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Registrate"
                android:textColor="@color/textButtonColor"
                android:id="@+id/checkIn_btn"
                android:background="@drawable/rounded_button"
                />
            <Button

                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Iniciar con Facebook"
                android:textColor="@color/textButtonColor"

                android:background="@drawable/rounded_button"
                />
            <Button

                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Iniciar con Google"
                android:textColor="@color/textButtonColor"

                android:background="@drawable/rounded_button"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:gravity="center"
                android:textColorLink="@color/textFieldTextColor"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="25dp"
                android:text="Términos y condiciones"
                android:textAlignment="center"
                android:textColor="@color/informationTextColor" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>




</RelativeLayout>